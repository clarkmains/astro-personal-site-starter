---
import { Icon } from "astro-icon";
const { label, link, icon } = Astro.props;
---
<a
    class="font-mono font-normal no-underline rounded-full px-8 py-3 inline-flex items-center text-neutral-800 bg-teal-300 hover:bg-teal-200 dark:bg-teal-500 dark:hover:bg-teal-400"
    href={link} 
>
    <span>{label}</span>
    {icon  && <Icon class="fill-current w-4 h-4 ml-2" name={icon} />}
</a>